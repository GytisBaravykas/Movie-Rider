@model MovieRider.Models.Movie
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release date: @Model.ReleaseDate.ToString("D")</li>
    <li>Date added: @Model.DateAdded.ToString("D")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>


